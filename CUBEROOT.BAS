REM Calculate Cube root(N)
REM  by BIGNUM Class (1000 digits)

USECLASS BIGNUM

N=2
K=1:WHILE K*K*K<=N:K=K+1:WEND:K=K-1
A=NEW(BIGNUM,K):B=NEW(BIGNUM,0)
C=NEW(BIGNUM,0):D=NEW(BIGNUM,4*N)

WIDTH 48
PRINT "Calculating CBRT(";N;")..."
PRINT "Initial Value=";K

DO
 C.AS(A)
 B.MUL2(A,A):B.MUL2(B,A):B.SUB(D,B)
 B.DIV(B,N*3):A.MUL2(A,B)
 PRINT "*";
LOOP UNTIL A.EQUAL(C)
PRINT:PRINT "CBRT(";N;")="
A.PRT(1,1000)

DO:IDLE:LOOP UNTIL INKEY()

B.MUL2(A,A):A.MUL2(A,B)
PRINT:PRINT "CBRT(";N;")^3 = "
A.PRT(1,1000)
END

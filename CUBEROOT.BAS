REM Calculate Cube root(N)
REM  by BIGNUM Class (1000 digits)

USECLASS BIGNUM

N=2

WIDTH 48
PRINT "Calculating CBRT(";N;")..."
K=1:WHILE K*K*K<=N:K=K+1:WEND:K=K-1
PRINT "Initial Value=";K

A=NEW(BIGNUM,K):B=NEW(BIGNUM,0)
C=NEW(BIGNUM,0):D=NEW(BIGNUM,4)
DO
 C.AS(A)
 B.MUL2(A,A):B.MUL2(B,A):B.DIV(B,N):B.SUB(D,B)
 A.MUL2(A,B):A.DIV(A,3)
 PRINT "*";
LOOP UNTIL A.EQUAL(C)
PRINT
PRINT "CBRT(";N;")=":PRINT A.RETVAL(0);".";
FOR I=1 TO 250
 S$="000"+DEC$(A.RETVAL(I)):PRINT S$(-4);
NEXT

DO:IDLE:LOOP UNTIL INKEY():PRINT:PRINT

B.MUL2(A,A):A.MUL2(A,B)
PRINT "CBRT(";N;")^3 = ":PRINT A.RETVAL(0);".";
FOR I=1 TO 250
 S$="000"+DEC$(A.RETVAL(I)):PRINT S$(-4);
NEXT
END

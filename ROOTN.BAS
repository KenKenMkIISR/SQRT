REM Calculate SQRT(N) Rev.2
REM  by BIGNUM Class (1000 digits)

USECLASS BIGNUM

N=2

WIDTH 48
PRINT "Calculating SQRT(";N;")..."
K=1:WHILE (K+1)*(K+1)<=N:K=K+1:WEND
PRINT "Initial Value=";K
A=NEW(BIGNUM,K):B=NEW(BIGNUM,0):C=NEW(BIGNUM,0)
D=NEW(BIGNUM,3*N)
DO
 C.AS(A)
 B.MUL2(A,A):B.SUB(D,B):B.DIV(B,N*2)
 A.MUL2(A,B)
 PRINT "*";
LOOP UNTIL A.EQUAL(C)

PRINT:PRINT "SQRT(";N;")="
PRINT A.RETVAL(0);".";
FOR I=1 TO 250
 S$="000"+DEC$(A.RETVAL(I)):PRINT S$(-4);
NEXT
DO:IDLE:LOOP UNTIL INKEY():PRINT:PRINT

A.MUL2(A,A)
PRINT "SQRT(";N;")^2 = ":PRINT A.RETVAL(0);".";
FOR I=1 TO 250
 S$="000"+DEC$(A.RETVAL(I)):PRINT S$(-4);
NEXT
END

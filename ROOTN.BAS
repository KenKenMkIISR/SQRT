REM Calculate SQRT(N) Rev.2
REM  by BIGNUM Class (1000 digits)

USECLASS BIGNUM

N=2
K=1:WHILE K*K<=N:K=K+1:WEND:K=K-1
A=NEW(BIGNUM,K):B=NEW(BIGNUM,0)
C=NEW(BIGNUM,0):D=NEW(BIGNUM,3*N)

WIDTH 48
PRINT "Calculating SQRT(";N;")..."
PRINT "Initial Value=";K
DO
 C.AS(A)
 B.MUL2(A,A):B.SUB(D,B):B.DIV(B,N*2)
 A.MUL2(A,B)
 PRINT "*";
LOOP UNTIL A.EQUAL(C)

PRINT:PRINT "SQRT(";N;")="
A.PRT(1,1000)
DO:IDLE:LOOP UNTIL INKEY()

A.MUL2(A,A)
PRINT:PRINT "SQRT(";N;")^2 = "
A.PRT(1,1000)
END

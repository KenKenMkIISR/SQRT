REM Calculate SQRT(5)
REM  by BIGNUM Class (1000 digits)

USECLASS BIGNUM
A=NEW(BIGNUM,2)
B=NEW(BIGNUM,1):B.DIV(B,2)
C=NEW(BIGNUM,0):D=NEW(BIGNUM,2):E=NEW(BIGNUM,0)
DO
 DO
  C.AS(B)
  E.MUL2(A,B):E.SUB(D,E):B.MUL2(B,E)
 LOOP UNTIL B.EQUAL(C)
 C.AS(A)
 E.MUL(B,5):A.ADD(A,E):A.DIV(A,2)
LOOP UNTIL A.EQUAL(C)

WIDTH 48
PRINT A.RETVAL(0);".";
FOR I=1 TO 250
 S$="000"+DEC$(A.RETVAL(I)):PRINT S$(-4);
NEXT
END
